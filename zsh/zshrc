## --------------
## instant prompt
## --------------
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

## -------------------------
## loading plugins via zap ⚡
## -------------------------
[ -f "$HOME/.local/share/zap/zap.zsh" ] && source "$HOME/.local/share/zap/zap.zsh"

# load these options before plugins
zstyle ':completion:*:descriptions' format '[%d]'
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'
zstyle ':completion:*' menu no
zstyle ':completion::complete:make::' tag-order targets variables
zstyle ':fzf-tab:complete:cd:*' fzf-preview 'eza --tree --level=2 --color=always $realpath'
zstyle ':fzf-tab:complete:kubectl:*' fzf-preview 'kubectl config view --minify -o jsonpath="{..context}" | jq -C'
zstyle ':fzf-tab:complete:docker:*' fzf-preview 'docker ps -a --format "{{json .}}" | jq -C "{Name: .Names, Image: .Image, Uptime: .Status}"'
zstyle ':fzf-tab:*' switch-group '<' '>'
zstyle ':fzf-tab:*' use-fzf-default-opts yes
zstyle :zsh-no-ps2: accept-line '.accept-line'
autoload -Uz compinit
if [ $(date +'%U') != $(/usr/bin/stat -f '%Sm' -t '%U' ${ZDOTDIR:-$HOME}/.zcompdump) ]; then
  compinit
else
  compinit -C
fi
unsetopt autocd
unalias -m '*'

plug "romkatv/powerlevel10k"
plug "desyncr/auto-ls"
export VI_MODE_ESC_INSERT="jj" && plug "zap-zsh/vim"
plug "kutsan/zsh-system-clipboard"
plug "Aloxaf/fzf-tab"
plug "zsh-users/zsh-autosuggestions"
plug "zdharma-continuum/fast-syntax-highlighting"
plug "hlissner/zsh-autopair"
plug "romkatv/zsh-no-ps2"
## -------------------------

# options to use vi-mode from command line
autoload -z edit-command-line
zle -N edit-command-line
bindkey -M vicmd ' ' edit-command-line
bindkey -M vicmd 'H' vi-beginning-of-line
bindkey -M vicmd 'L' vi-end-of-line
bindkey -M vicmd -s S ciw
bindkey -M vicmd -s E 5e
bindkey -M vicmd -s B 5b
bindkey -M vicmd Y zsh-system-clipboard-vicmd-vi-yank-eol

# exporting environment variables
export XDG_CONFIG_HOME="$HOME/.config"
export EDITOR="nvim"
export LANG=en_US.UTF-8
export LC_CTYPE="en_US.UTF-8"
export MANPAGER="sh -c 'col -bx | bat -l man -p'"
export FZF_DEFAULT_OPTS="\
	--reverse \
	--no-border \
	-e \
	--no-scrollbar \
	--height=50% \
	--no-info \
	--header-first \
	--prompt='❯ ' \
	--separator=' ' \
	--gutter=' ' \
	--padding=1 \
	--preview-window=right:50%:wrap \
	--preview-border line \
	--bind shift-up:preview-up,shift-down:preview-down,?:toggle-preview,ctrl-a:toggle-all \
	--color=fg+:-1:regular,bg+:#073642,border:#268bd2,separator:#2aa198,pointer:#cb4b16,hl:#268bd2,hl+:#268bd2 \
	--pointer=▶ \
	--marker=' '"
export FZF_DEFAULT_COMMAND="fd -H -t f -E '.git/'"
export _ZO_FZF_OPTS="$FZF_DEFAULT_OPTS --preview='eza --tree --level=2 --color=always {2}' --delimiter=' '"
export NAVI_CONFIG="$HOME/.config/navi/config.yaml"
_ls_colors_cache="${ZDOTDIR:-$HOME}/.zsh_ls_colors"
if [[ ! -f "$_ls_colors_cache" || "$(command -v vivid)" -nt "$_ls_colors_cache" ]]; then
  vivid generate solarized-dark > "$_ls_colors_cache"
fi
export LS_COLORS="$(<"$_ls_colors_cache")"
export JQ_COLORS="2;37:0;33:0;33:0;35:0;36:1;30:2;37:0;34"
export GOPATH=$HOME/go
export GOBIN=$GOPATH/bin
export FZF_LUA_PATH=$HOME/.local/share/nvim/lazy/fzf-lua
export PATH=${PATH}:$GOBIN
export PATH="$HOME/.luarocks/bin:$PATH"
export PATH="/Users/$USER/.local/share/bob/nvim-bin:$PATH"
export XAN_VIEW_ARGS="-pAMIR -t compact"
typeset -U path
typeset -U manpath

# alias
alias ..="cd .."
alias -- -="cd -"
alias cut="gcut"
alias sed="gsed"
alias head="ghead"
alias ls="eza --tree . --level=1 --sort='type' --icons"
alias rg="rg --colors match:bg:23 --colors match:fg:137"
alias zenith="zenith -d 0 -n 0"
alias du="ncdu --show-percent --hide-graph --show-itemcount --color dark"
alias df="duf"
alias jd="json_diff"
alias env="list_env"
alias src="exec zsh"
alias calc="insect"
alias :q="exit"
alias upgrade="brew upgrade && brew cleanup --prune=1 -s"
alias code="scc -c --no-cocomo"
alias pingme="gping 8.8.8.8 google.com"
alias lg="lazygit"

