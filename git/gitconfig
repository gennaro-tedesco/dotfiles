# user information
[user]
	name = Gennaro Tedesco
	username = gennaro-tedesco

# push-pull-merge defaults
[push]
	default = current

[pull]
	rebase = false

[merge]
	conflictstyle = diff3

[diff]
    colorMoved = default

# pager and default editor
[core]
	editor = $EDITOR
	pager = delta

[delta]
	features = side-by-side
	line-numbers = true
	hunk-header-style = omit
	navigate = true

# alias
[alias]
	s = status -s
	c = checkout -- .
	d = diff --name-only
	root = rev-parse --show-toplevel
